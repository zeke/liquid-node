{
  "name": "liquid",
  "description": "Liquid template engine for Node.js",
  "version": "3.0.0",
  "license": "MIT",
  "homepage": "https://github.com/sirlantis/liquid-node",
  "keywords": [
    "liquid",
    "template",
    "jinja"
  ],
  "main": "./lib/index.js",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "strftime": "~0.9.2"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.1.2",
    "chai": "~3.5.0",
    "chai-as-promised": "~5.3.0",
    "coveralls": "^2.11.4",
    "jscoverage": "^0.6.0",
    "mocha": "~2.5.3",
    "mocha-lcov-reporter": "1.2.0",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0",
    "standard": "^12.0.1"
  },
  "scripts": {
    "test": "mocha -R spec test",
    "precommit": "npm test && npm run lint",
    "coverage": "LIQUID_NODE_COVERAGE=1 mocha -r jscoverage --reporter mocha-lcov-reporter test | coveralls",
    "coverage-report": "LIQUID_NODE_COVERAGE=1 mocha -r jscoverage --covout html test",
    "lint": "standard --fix"
  },
  "standard": {
    "globals": [
      "expect",
      "renderTest",
      "requireLiquid"
    ],
    "env": [
      "mocha"
    ]
